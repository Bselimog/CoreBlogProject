
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model EntityLayer.Concrete.Blog

@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Blog Ekleme Sayfası</h1>
<br />

@using (Html.BeginForm("BlogAdd", "Blog", FormMethod.Post))
{
    <label for="exampleInput mb-2"> @localizer["Lütfen Blog Başlığını Giriniz!"]</label>
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogTitle, "", new { @class = "text-success" })
    <br />
    <br />
    <label for="exampleInput mb-2"> @localizer["Lütfen Blog Görselini Giriniz!"]</label>
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogImage, "", new { @class = "text-success" })
    <br />
    <br />
    <label for="exampleInput mb-2"> @localizer["Lütfen Blog Küçük Görselini Giriniz!"]</label>
    @Html.TextBoxFor(x => x.BlogThumbnailImage, new { @class = "form-control" })
    <br />
    <br />
    <label for="exampleInput mb-2"> @localizer["Lütfen Blog Kategorisini Giriniz!"]</label>
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
    <br />
    <br />
    <label for="exampleInput mb-2">@localizer["Lütfen Blog İçeriğini Giriniz!"]</label>
        @Html.TextAreaFor(x => x.BlogContent, 15, 3, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.BlogContent, "", new { @class = "text-success" })
        <br />
        <br />
        <button class="btn btn-info">@localizer["Blog'u Kaydet"]</button>
    }
