@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@localizer["Yazar Profil Bilgileri Düzenleme"]</h4>
                <br />
                @Html.HiddenFor(x => x.WriterID)
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">@localizer["Adınız!"]</label>
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3"> @localizer["Mail Adresiniz!"]</label>
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">
                            @localizer["Şifreniz!"]
                        </label>
                        @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })

                        @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword2 mb-2">
                            @localizer["Parolanızı Tekrar Giriniz"]
                        </label>
                        <input type="password" name="PasswordAgain" class="form-control" id="password2" placeholder=@localizer["Şifrenizi Tekrar Giriniz" ] required="" />
                    </div>
                    <div class="form-group">
                        <label>
                            @localizer["GÖRSELİNİZ!"]
                        </label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder=@localizer["Resminizi Yükleyiniz..."]>
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">@localizer["Resim Seç"]</button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">
                            @localizer["Hakkınızda!"]
                        </label>
                        @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
                    </div>
                    
                    <button type="submit" class="btn btn-gradient-primary mr-2">
                        @localizer["Güncelle"]
                    </button>
                    <button class="btn btn-light">@localizer["İptal"]</button>
                </form>
            </div>
        </div>
    </div>
}
